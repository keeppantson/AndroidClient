<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_list_item_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:layout_marginLeft="50dp" />

        <TextView
            android:layout_width="40dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/check"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/check_box_1" />

    </LinearLayout>

    <ImageView
        android:layout_marginLeft="@dimen/dialog_list_item_margin"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/dialog_list_item_icon_width"
        android:layout_height="10dp"
        android:background="@drawable/zhong_xian_3"/>

</LinearLayout>
