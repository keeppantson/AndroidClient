<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/main_color"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height" >
    	
	<TextView 
	    style="@style/Text.TitleBar"
	    android:id="@+id/title_bar_text"
	    android:focusable="true"
	    android:layout_centerInParent="true"
	    android:paddingLeft="@dimen/title_bar_btn_width"
	    android:paddingRight="@dimen/title_bar_btn_width"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"/>
    
	<ImageButton 
	    android:id="@+id/title_bar_left_image_btn"
	    android:visibility="gone"
	    android:layout_marginLeft="0dp"
	    android:background="@null"
		android:layout_width="50dp"
	    android:layout_height="50dp"/>
	
	<Button 
	    android:id="@+id/title_bar_left_btn"
	    android:visibility="gone"
	    style="@style/Button.TitleBar"
	    android:paddingLeft="@dimen/title_bar_btn_padding"
	    android:paddingRight="@dimen/title_bar_btn_padding"
	    android:layout_alignParentLeft="true"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"/>
	    
	<ImageButton 
	    android:id="@+id/title_bar_right_image_btn"
	    android:visibility="gone"
	    android:layout_marginRight="0dp"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:background="@null"
		android:layout_width="70dp"
	    android:layout_height="50dp"/>
	
	
	<Button 
	    android:id="@+id/title_bar_right_btn"
	    android:visibility="gone"
	    style="@style/Button.TitleBar"
	    android:paddingLeft="@dimen/title_bar_btn_padding"
	    android:paddingRight="@dimen/title_bar_btn_padding"
	    android:layout_alignParentRight="true"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"/>

</RelativeLayout>
