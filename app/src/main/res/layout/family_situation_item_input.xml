<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="@dimen/family_sitiation_item_height"
    android:orientation="horizontal" >
    
	<TextView
        android:id="@+id/name"
        android:textColor="@color/gray_dark"
        android:textSize="@dimen/family_sitiation_item_name_size"
        android:layout_marginLeft="@dimen/family_sitiation_item_name_margin_left"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
    	android:layout_height="wrap_content"/>
	
	
	<EditText
	    android:id="@+id/input"
	    android:background="@drawable/item_input_a"
	    android:textSize="@dimen/family_sitiation_item_input_size"
	    android:textColor="@color/gray_dark"
	    android:singleLine="true"
	    android:numeric="integer"
	    android:maxLength="5"
	    android:gravity="center"
	    android:layout_gravity="center_vertical"
	    android:layout_width="@dimen/family_sitiation_item_input_width"
    	android:layout_height="wrap_content"/>
	
	<TextView
	    android:id="@+id/unit"
	    android:textColor="@color/gray_dark"
        android:textSize="@dimen/family_sitiation_item_unit_size"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/family_sitiation_item_unit_margin"
        android:layout_marginRight="@dimen/family_sitiation_item_unit_margin"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
</LinearLayout>
