<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/item_bg_white"
	android:layout_width="match_parent"
   	android:layout_height="match_parent">
    
    <TextView 
        android:id="@+id/name"
        android:textColor="@color/gray_dark"
        android:textSize="@dimen/settings_item_name_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/item_user_info_name_margin_left"
        android:layout_width="wrap_content"
   		android:layout_height="wrap_content"/>
    
    
    <ImageView 
        android:id="@+id/arrow"
        android:scaleType="fitXY"
        android:src="@drawable/icon_arrow"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/item_user_info_arrow_margin_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
</RelativeLayout>
