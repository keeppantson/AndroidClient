<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/item_bg_white"
	android:layout_width="match_parent"
   	android:layout_height="@dimen/item_user_info_height">

	<ImageView
        android:id="@+id/avatar"
        android:scaleType="fitXY"
        android:background="@drawable/default_user_avatar"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/item_user_info_avatar_margin_left"
        android:layout_width="@dimen/item_user_info_avatar_width"
        android:layout_height="@dimen/item_user_info_avatar_height"/>

    
    <TextView 
        android:id="@+id/name"
        android:textColor="@color/black"
        android:textSize="@dimen/item_user_info_name_size"
        android:layout_toRightOf="@id/avatar"
        android:layout_marginTop="@dimen/item_user_info_name_margin_top"
        android:layout_marginLeft="@dimen/item_user_info_name_margin_left"
        android:layout_width="wrap_content"
   		android:layout_height="wrap_content"/>

    
    <TextView 
        android:id="@+id/id_number"
        android:textColor="@color/black"
        android:textSize="@dimen/item_user_info_id_number_size"
        android:layout_alignLeft="@id/name"
        android:layout_below="@id/name"
        android:layout_marginTop="@dimen/item_user_info_id_number_margin_top"
        android:layout_width="wrap_content"
   		android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/arrow"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="@drawable/icon_arrow"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/item_user_info_arrow_margin_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
