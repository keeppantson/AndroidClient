<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ru_hu_he_cha_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/she_zhi_guan_yu" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/she_zhi_guan_yu_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/she_zhi_guan_yu_1" />
            <ImageView
                android:id="@+id/jian_kuang_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/jian_kang_2" />
            <TextView
                android:layout_width="38dp"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/she_zhi_guan_yu_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/guan_yu_2" />
            <ImageView
                android:id="@+id/she_zhi_guan_yu_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/she_zhi_guan_yu_4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/li_xian_mi_ma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/li_xian_mi_ma" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ji_shu_zhi_chi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ji_shu_zhi_chi" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/li_xian_mi_ma" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/she_zhi_4" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.98"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ru_hu_he_cha_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ru_hu_he_cha_bottom" />


            <ImageButton
                android:id="@+id/xin_zeng_bao_song_bottom"
                android:background="@drawable/xin_zeng_bao_song_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <ImageButton
                android:id="@+id/she_zhi"
                android:background="@drawable/she_zhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
