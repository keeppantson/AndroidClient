<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >


        <LinearLayout
            android:id="@+id/jiancha"
            android:background="@drawable/bg_jia_ting_bei_jing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avatar"
                android:scaleType="fitXY"
                android:background="@drawable/default_user_avatar"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="205dp"
                android:layout_width="72dp"
                android:layout_height="72dp"/>

            <LinearLayout
                android:id="@+id/jiancha_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_gravity="left"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/name"
                    android:text="xingming"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/id_number"
                    android:text="32058219810112"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/family_situation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:background="@drawable/bt_jia_ting_xin_xi" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/other"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="550dp">

            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@color/transparent"
                android:listSelector="@null" />

            <TextView
                android:id="@+id/empty_text"
                android:textSize="24sp"
                android:textColor="@color/gray"
                android:text="@string/no_record_data"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.98"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/add_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tian_jia_cheng_yuan" />
            <ImageButton
                android:id="@+id/commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wan_cheng_he_cha" />


        </LinearLayout>
    </LinearLayout>


</FrameLayout>
