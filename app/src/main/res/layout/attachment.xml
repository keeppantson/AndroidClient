<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.zgmz.ls"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<com.zgmz.ls.view.SingleCellLayout 
        android:id="@+id/cell_layout"
	    app:cellWidth="@dimen/attachment_cell_layout_width"
	    app:cellHeight="@dimen/attachment_cell_layout_height"
	    app:widthGap="@dimen/attachment_cell_layout_width_gap"
	    app:heightGap="@dimen/attachment_cell_layout_height_gap"
	    app:countX="3"
	    app:countY="4"
	    android:layout_gravity="center_horizontal"
	    android:padding="@dimen/attachment_cell_layout_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
	
	
	<ImageView 
	    android:id="@+id/image"
	    android:scaleType="fitCenter"
	    android:padding="20dp"
	    android:src="@drawable/photo_image"
	    android:background="@color/translucent"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"/>
	
</FrameLayout>
