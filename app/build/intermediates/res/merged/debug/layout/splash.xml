<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    

    
    <TextView 
        android:id="@+id/name"
        android:text="@string/splash_app_name"
        android:textSize="@dimen/splash_app_name_size"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <ImageView 
        android:id="@+id/logo"
        android:layout_above="@id/name"
        android:layout_marginBottom="@dimen/splash_app_name_margin_top"
        android:src="@drawable/logo_larger"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/splash_logo_width"
        android:layout_height="@dimen/splash_logo_height"/>
    
    
    <TextView 
        android:id="@+id/company_name"
        android:text="@string/splash_company_name"
        android:textSize="@dimen/splash_company_text_size"
        android:textColor="@color/gray"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/splash_company_margin_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    
</RelativeLayout>
